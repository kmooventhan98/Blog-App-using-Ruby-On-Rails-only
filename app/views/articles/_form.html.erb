<%= render 'shared/errors', obj:@article %>
<div class='row'>
	<div class='col-md-12'>
		<%= form_for(@article, :html=> {class:"form-horizontal",role:"form"}) do |f|%>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :title %>
				</div>

				<div class="col-md-8">
					<%= f.text_field :title, class:"form-control", placeholder: "Title of the Article", autofocus:true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-md-2">
					<%= f.label :description %>
				</div>
				<div class="col-md-8">
					<%= f.text_area :description, class: "form-control", placeholder:"Body of the article",rows:10 %>
				</div>
			</div>

				<div class="form-group">
					<div class="row">

						<div class="col-md-offset-2 col-md-8">
						<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
							<% cb.label(class: "checkbox-inline input_checkbox"){cb.check_box(class: "checkbox") +cb.text} %>
						<% end %>
						</div>
					</div>
				</div>

				<div class="form-group">
					<div class="col-md-offset-2 col-md-10">
						<%= f.submit class: 'btn btn-primary btn-lg' %>
					</div>
				</div>

		<% end %>

		<div class="col-md-4 col-md-offset-5">
			[ <%= link_to "Cancel and return to Article listing",articles_path %> ]
		</div>

	</div>
</div>