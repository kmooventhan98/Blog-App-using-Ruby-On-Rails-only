<h2 align="center">
	<%= @article.title %>
</h2>
<div class="well col-md-8 col-md-offset-2">
	<h4 class="center description"> <strong>Description:</strong>
	</h4>
	<hr />
	<%= simple_format(@article.description) %>
	<div class="article-actions">
		<%= link_to "Edit", edit_article_path(@article),class: "btn btn-md btn-primary" %>
		<%= link_to "Delete",article_path(@article),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-md btn-danger" %>
		<%= link_to "Back",articles_path, class: "btn btn-md btn-success" %>
	</div> 
</div>
